/** Make the container add padding to the content to match the design */
.mail-preview-container {
  padding: 5px;
}

.mail-bottom-border {
  border-bottom: 1px solid EMBOSS_TEXT_COLOR;
}

.mail-service-info {
  opacity: 0.7;
}

.mail-padded {
	padding: 5px 0 5px 0;
}

.clickable {
  cursor: pointer;
}

.clickable:hover {
  color: OUTLINE_COLOR;
}
